---
interface Props {
  useCesium: boolean
}

const { useCesium } = Astro.props
const baseUrl = import.meta.env.BASE_URL
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    {useCesium && <script src={`${baseUrl}/cesium/Cesium.js`} />}
    {useCesium && <script src={`${baseUrl}/cesium/Widgets/widgets.css`} />}
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
    width: 100%;
    height: 100%;
  }
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
